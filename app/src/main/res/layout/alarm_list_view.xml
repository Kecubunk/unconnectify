<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Times -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10:15"
            android:textAppearance="@style/CodeFont" />

        <TextView
            android:id="@+id/times_separator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="-"
            android:textAppearance="@style/CodeFont" />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20:15"
            android:textAppearance="@style/CodeFont" />

    </LinearLayout>

    <!-- show end time check box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/set_end_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:buttonTint="#ffffff"
            android:text="Set End Time"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Connections-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ToggleButton
                android:id="@+id/wifi"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/toogle_wifi"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ToggleButton
                android:id="@+id/hotspot"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/toogle_hotspot"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ToggleButton
                android:id="@+id/bluetooth"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/toogle_bluetooth"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <!-- Days -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/sunday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textOn="S"
            android:textOff="S"
            android:textAppearance="@style/DaysStyleBold" />

        <ToggleButton
            android:id="@+id/monday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textOn="M"
            android:textOff="M"
            android:textAppearance="@style/DaysStyleBold" />

        <ToggleButton
            android:id="@+id/tuesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textOn="T"
            android:textOff="T"
            android:textAppearance="@style/DaysStyleBold" />

        <ToggleButton
            android:id="@+id/wednesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textOn="W"
            android:textOff="W"
            android:textAppearance="@style/DaysStyleBold" />

        <ToggleButton
            android:id="@+id/thursday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textOn="T"
            android:textOff="T"
            android:textAppearance="@style/DaysStyleBold" />

        <ToggleButton
            android:id="@+id/friday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textOn="F"
            android:textOff="F"
            android:textAppearance="@style/DaysStyleBold" />

        <ToggleButton
            android:id="@+id/saturday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textOn="S"
            android:textOff="S"
            android:textAppearance="@style/DaysStyleBold" />


    </LinearLayout>

</LinearLayout>